<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Lightstep exporter for Open Telemetry.</Description>
    <PackageTags>$(PackageTags);LightStep;distributed-tracing</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>$(NoWarn),1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <!-- Uses a pre-release version of OpenTelemetry API / SDK -->
    <PackageReference Include="OpenTelemetry" Version="0.2.0-*" />
  </ItemGroup>

</Project>
